<project>
    <extend>${basedir}/../project.xml</extend>
    <artifactId>acegi-security-resin</artifactId>
    <name>Acegi Security System for Spring - Resin adapter</name>
    <dependencies>
        <dependency>
            <groupId>resin</groupId>
            <artifactId>resin</artifactId>
            <version>3.0.9</version>
        </dependency>
        <dependency>
            <groupId>retroweaver</groupId>
            <artifactId>retroweaver</artifactId>
            <version>1.0fcs</version>
        </dependency>
    </dependencies>
  <build>
    <unitTest>
      <includes>
        <include>**/*Tests.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/../../core/src/main/resources</directory>
          <includes>
            <include>**/**</include>
          </includes>
          <filtering>false</filtering>
        </resource>
      </resources>
    </unitTest>
  </build>
</project>
